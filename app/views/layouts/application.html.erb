<!DOCTYPE html>
<html>
  <head>
    <title>Your Path to the Good Life</title>
    <%= csrf_meta_tags %>

    <!-- Expand the number of characters we can use in the document beyond basic ASCII ðŸŽ‰ -->
    <meta charset="utf-8">

    <!-- Make it responsive to small screens -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>

    <!--Connect JQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

    <!-- Connect Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- Connect Bootstrap JavaScript and its dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>

    <!-- Connect Font Awesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/js/all.min.js"></script>

    <!-- Compile Javascript Pack Files -->
    <%= javascript_pack_tag 'application', 'alerts'%>

  </head>
  <nav class="navbar navbar-dark bg-dark" onload="ClearForm()">
    <div class="container-fluid">
      <a class="navbar-brand" href="<%= root_path()%>"><%= image_tag 'logo-white.png', height: "62.5rem", width: "125rem" %></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <% if (signed_in?) == true %>
            <li class="nav-item">
              <a class="nav-link" href="<%=assessment_scores_path%>">My Sanctuary</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="<%=course_lesson_path({ course_id: @course, id: @lesson})%>">My Path</a>
            </li>
                        <li class="nav-item">
              <a class="nav-link" href="<%= courses_path %>">Courses</a>
            </li>
            <li class="nav-item">
              <%= link_to "Sign Out", destroy_seeker_session_path, class: "nav-link", method: :delete  %>
            </li>
          <% else %>
            <li class="nav-item">
              <a class="nav-link" href="<%=new_seeker_session_path%>">Sign In</a>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <body style="background-image: url(<%= image_url('/assets/welcome-background.svg')%>); background-position-y: bottom; background-size: cover; background-attachment: fixed; background-position: bottom; background-repeat: no-repeat">
    <div class="container-fluid">
      <div class="alert alert-danger alert-dismissible collapse fade" id="alert" role="alert">
        <p><%= alert %></p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <div class="alert alert-success alert-dismissible collapse fade" id="notice" role="notice">
        <p><%= notice %></p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
        </button>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
