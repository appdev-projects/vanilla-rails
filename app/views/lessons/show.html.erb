<p id="notice"><%= notice %></p>
<div class="container">
  <div class="card">
    <div class="card-header">
      <div class="row">
        <h1 class="text-center">
          <%= @lesson.title%>
        </h1>
      </div>
    </div>
    <div class="card-body">

      <div class="accordion" id="accordionExample">
        <div class="accordion-item">
          <h2 class="accordion-header" id="headingOne">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
              Today's Teaching: <%= @lesson.description%>
            </button>
          </h2>
          <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
            <div class="accordion-body">
              <%= render partial: @teaching_link %>
              <div>
                <%= render partial: "lesson_events/form", locals: {study_session: @study_session, status_value: "teaching_done"} %>
              </div>
            </div>
          </div>
        </div>

        <div class="accordion-item">
          <h2 class="accordion-header" id="headingTwo">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
              Today's Practice
            </button>
          </h2>
          <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
            <div class="accordion-body">
              <%= render partial: @practice_link %>
              <div>
                <%= render partial: "lesson_events/form", locals: {study_session: @study_session, status_value: "practice_done"} %>
              </div>
            </div>
          </div>
        </div>
<% if @lesson.day < 5 %>
        <div class="accordion-item">
          <h2 class="accordion-header" id="headingThree">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseTwo">
              SHALOM Step 1: Connecting With The Deeper Self
            </button>
          </h2>
          <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
            <div class="accordion-body">
              <div>
                <%= render partial: "assessment_scores/form", locals: {study_session: @study_session, type_assessment: @lesson.spiritual_type, assessment_score: @type_score} %>
              </div>
            </div>
          </div>
        </div>
<%end%>
      </div>
    </div>
    <div class="card-footer">
      <%= render partial: "lesson_events/form", locals: {study_session: @study_session, status_value: "complete" } %>
    </div>
  </div>
</div>
