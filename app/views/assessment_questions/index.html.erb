<p id="notice"><%= notice %></p>

<h1>Assessment Questions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Question</th>
      <th>String</th>
      <th>Spiritual type</th>
      <th>Number string</th>
      <th>Assessment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assessment_questions.each do |assessment_question| %>
      <tr>
        <td><%= assessment_question.name %></td>
        <td><%= assessment_question.question %></td>
        <td><%= assessment_question.string %></td>
        <td><%= assessment_question.spiritual_type %></td>
        <td><%= assessment_question.number_string %></td>
        <td><%= assessment_question.assessment %></td>
        <td><%= link_to 'Show', assessment_question %></td>
        <td><%= link_to 'Edit', edit_assessment_question_path(assessment_question) %></td>
        <td><%= link_to 'Destroy', assessment_question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

