<div class="container col-4 offset-4">
<br>
  <div class="row">
  <div class="col d-flex justify-content-center align-items-center">
    <%= form_with(model: study_session, method: :patch, local: false, remote: true) do |form| %>
      <% if study_session.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(study_session.errors.count, "error") %> Sorry, couldn't save this. Please try refreshing your page. </h2>

          <ul>
            <% study_session.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.hidden_field :seeker_id, value: current_seeker.id %>
      </div>

      <div class="field">
        <%= form.hidden_field :lesson_id, value: study_session.lesson_id %>
      </div>

      <div class="field">
        <%= form.hidden_field :status, value: status_value %>
      </div>

      <div class="form-actions">
        <%= form.submit "Complete My Practice", class: "btn-success btn", style: "font-family: EricaOne; font-size: 150%; border-radius: 0.25rem; box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22)" %>
      </div>
    <% end %>
  </div>
</div>
<br>
